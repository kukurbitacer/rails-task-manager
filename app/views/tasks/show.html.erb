<div class="header">
<h1><%= @task.title %></h1>
<%= link_to "Edit task", update_task_path(@task), class: "btn btn-primary" %>
</div>
<div class="info-container">
<p class="details"><%= @task.details %></p>
<% if @task.completed %>
  <p class="status"><i class="far fa-check-square"></i> This task has been completed</p>
<% else %>
  <p class="status"><i class="far fa-square"></i> This task still needs to be done</p>
<% end %>
</div>
<%= link_to tasks_path do %>
  <i class="fas fa-undo"></i>
  Back to all tasks
<% end %>
